{
  "name": "smplphp/typing",
  "description": "A simple, modern PHP typing package, encapsulating the logic behind PHPs typing system.",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Ollie Read",
      "email": "smpl@ollie.codes"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "sempro/phpunit-pretty-print": "^1.4",
    "vimeo/psalm": "^4.21",
    "phpstan/phpstan": "^1.4",
    "infection/infection": "^0.26.9"
  },
  "autoload": {
    "psr-4": {
      "Smpl\\Typing\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Smpl\\Typing\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
